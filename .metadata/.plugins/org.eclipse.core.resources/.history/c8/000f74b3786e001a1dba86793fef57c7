package exercicios;

import java.util.Locale;
import java.util.Scanner;

public class AtmPrograma {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Entre com o numero da conta");
		int numeroConta = sc.nextInt();
		System.out.print("Entre com o Dono da conta: ");
		sc.nextLine();
		String titularConta = sc.nextLine();
		System.out.print("Existe depósito inicial? (Y/N);");
		sc.nextLine();
		String escolha = sc.nextLine();
		
		double deposito = 0;
		
		if(escolha == "Y")
		{
			System.out.print("Entre com o valor do deposito: ");
			deposito = sc.nextDouble();
		}
		else
		{
			deposito = 0;
		}
		
		Atm operacao = new Atm(numeroConta, titularConta, deposito);
		
		System.out.println("Conta: "+ operacao.titularConta);
		sc.close();
	}

}
